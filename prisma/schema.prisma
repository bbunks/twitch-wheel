generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  role     Role
  username String
  Request  Request?
}

model Request {
  id      Int    @id @default(autoincrement())
  userId  Int    @unique
  User    User   @relation(fields: [userId], references: [id])
  request String
}

enum Role {
  User
  Moderator
  Admin
}
